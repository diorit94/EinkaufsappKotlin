<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codefrog.dioritbajrami.einkaufsappkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/listicon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/listicon2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoggedIn"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.EinkaufStarten"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".Activities.Empfehlung_activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />
        <activity
            android:name=".Activities.EhemaligeEinkaeufe"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />
        <activity
            android:name=".Activities.EventsListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.EventItemActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />
    </application>

</manifest>