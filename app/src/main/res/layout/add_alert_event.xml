<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_artikel_name"
        android.support.design:hintAnimationEnabled="true"
        android.support.design:hintEnabled="true">

        <AutoCompleteTextView
            android:id="@+id/eventNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="sentences"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/eventLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/event_artikelzahl"
            android.support.design:hintAnimationEnabled="true"
            android.support.design:hintEnabled="true"
            android:layout_weight="1">

            <EditText
                android:id="@+id/eventAmmountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinnerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    </LinearLayout>
    <!--<android.support.design.widget.TextInputLayout
        android:id="@+id/verwalterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/verwalterEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Verwalter" />
    </android.support.design.widget.TextInputLayout>-->

    <Button
        android:id="@+id/addEventItemButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HinzufÃ¼gen"
        android:textAllCaps="false"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

</LinearLayout>

